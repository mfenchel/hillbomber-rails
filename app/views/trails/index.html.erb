<h1>Listing trails</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Creator</th>
    <th>S lat</th>
    <th>S long</th>
    <th>E lat</th>
    <th>E long</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trails.each do |trail| %>
  <tr>
    <td><%= trail.title %></td>
    <td><%= trail.creator %></td>
    <td><%= trail.s_lat %></td>
    <td><%= trail.s_long %></td>
    <td><%= trail.e_lat %></td>
    <td><%= trail.e_long %></td>
    <td><%= link_to 'Show', trail %></td>
    <td><%= link_to 'Edit', edit_trail_path(trail) %></td>
    <td><%= link_to 'Destroy', trail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

